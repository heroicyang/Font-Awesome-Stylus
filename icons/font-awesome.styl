/**
 * Use icons as needed
 * 
 * Examples:
 *   .{$fa-css-prefix}-glass
 *     fa-icon("glass")
 */
fa-icon($icon, $position="before")
  &:{$position}
    content $fa-icons[$icon]

/**
 * Enable all icons
 */
import-all-icons()
  for icon in $fa-icons
    .{$fa-css-prefix}-{icon}
      fa-icon(icon)